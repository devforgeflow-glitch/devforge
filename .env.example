# ============================================================================
# DEVFORGE - VARIÁVEIS DE AMBIENTE
# ============================================================================
# Copie este arquivo para .env.local e preencha os valores
# NUNCA commite .env.local ou qualquer arquivo com secrets reais
# ============================================================================

# ----------------------------------------------------------------------------
# AMBIENTE
# ----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=DevForge

# ----------------------------------------------------------------------------
# FIREBASE (Client-side - Públicas)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# ----------------------------------------------------------------------------
# FIREBASE ADMIN (Server-side - SECRETAS)
# ----------------------------------------------------------------------------
# Opção 1: JSON inline (escapar aspas)
FIREBASE_ADMIN_CREDENTIALS=

# Opção 2: Caminho para arquivo JSON
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ----------------------------------------------------------------------------
# REDIS
# ----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
# Para Redis Cloud:
# REDIS_URL=redis://user:password@host:port

# ----------------------------------------------------------------------------
# JWT (Autenticação)
# ----------------------------------------------------------------------------
# Gere com: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ----------------------------------------------------------------------------
# INTELIGÊNCIA ARTIFICIAL
# ----------------------------------------------------------------------------
# OpenAI (GPT-4)
OPENAI_API_KEY=sk-...

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# Modelo padrão
AI_DEFAULT_PROVIDER=openai
AI_DEFAULT_MODEL=gpt-4-turbo-preview

# ----------------------------------------------------------------------------
# PAGAMENTOS (Mercado Pago)
# ----------------------------------------------------------------------------
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_WEBHOOK_SECRET=
# URLs de retorno
MERCADOPAGO_SUCCESS_URL=${NEXT_PUBLIC_APP_URL}/pagamento/sucesso
MERCADOPAGO_FAILURE_URL=${NEXT_PUBLIC_APP_URL}/pagamento/erro
MERCADOPAGO_PENDING_URL=${NEXT_PUBLIC_APP_URL}/pagamento/pendente

# ----------------------------------------------------------------------------
# EMAIL (SendGrid)
# ----------------------------------------------------------------------------
SENDGRID_API_KEY=SG....
SENDGRID_FROM_EMAIL=noreply@devforge.com.br
SENDGRID_FROM_NAME=DevForge

# ----------------------------------------------------------------------------
# MONITORAMENTO
# ----------------------------------------------------------------------------
# Sentry
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ----------------------------------------------------------------------------
# RATE LIMITING
# ----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW_MS=900000

# ----------------------------------------------------------------------------
# SEGURANÇA
# ----------------------------------------------------------------------------
# CORS - Origens permitidas (separadas por vírgula)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://devforge.com.br

# CSRF
CSRF_SECRET=

# IP Allowlist para Admin (opcional)
ADMIN_IP_ALLOWLIST=

# ----------------------------------------------------------------------------
# BULLMQ (Jobs em Background)
# ----------------------------------------------------------------------------
BULLMQ_REDIS_URL=${REDIS_URL}
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=

# ----------------------------------------------------------------------------
# STORYBOOK (opcional)
# ----------------------------------------------------------------------------
STORYBOOK_PORT=6006

# ----------------------------------------------------------------------------
# DESENVOLVIMENTO
# ----------------------------------------------------------------------------
# Firebase Emulators
USE_EMULATOR=false
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Debug
DEBUG=false
LOG_LEVEL=info

# ----------------------------------------------------------------------------
# DEPLOY (Vercel)
# ----------------------------------------------------------------------------
# Configuradas automaticamente pela Vercel:
# VERCEL_URL
# VERCEL_ENV
# VERCEL_GIT_COMMIT_SHA
