  "scripts": {
    "dev": "concurrently -n \"REDIS,NEXT\" -c \"red,green\" \"npm run redis:check\" \"next dev\"",
    "dev:no-redis": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "jobs:dev": "tsx watch src/api/jobs/worker.ts",
    "jobs:prod": "node dist/api/jobs/worker.js",
    "jobs:dashboard": "tsx src/api/jobs/dashboard.ts",
    "redis:check": "node scripts/check-redis.js",
    "redis:start": "redis-server --daemonize yes",
    "redis:stop": "redis-cli shutdown",
    "db:seed": "tsx scripts/seed.ts",
    "db:backup": "tsx scripts/backup-firestore.ts",
    "generate:icons": "tsx scripts/generate-pwa-icons.ts",
    "prepare": "husky install"
  },
